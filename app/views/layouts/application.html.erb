<!DOCTYPE html>
<html>
  <head>
    <title>Quack</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.slackURL = "<%= image_url('home.png') %>";
    </script>
    
    <% if current_user %>
      <script>
        window.currentUser = {
          "id": <%= current_user.id %>
          "username": <%= current_user.username%>
          "email": <%= current_user.email %>
        };
      </script>
    <% end %>


  </head>

  <body>
    <%= yield %>
  </body>
</html>
